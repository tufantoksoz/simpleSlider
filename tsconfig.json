{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./build/",
        "target": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": false,
        "pretty": true,
        "strictNullChecks": false,
        "lib": [
            "es2016",
            "dom",
            "ES6",
            "ES2016.Array.Include"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}